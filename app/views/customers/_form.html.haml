= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  %h3 Engagements
  #engagements
    = f.fields_for :engagements do |engagement|
      = render 'engagement_fields', f: engagement
    .links
      = link_to_add_association 'add_engagement', f, :engagements

  .actions
    = f.submit 'Save'
